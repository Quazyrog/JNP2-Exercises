<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NavigationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/AppTheme.Vignette.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Target name:" />

                <TextView
                    android:id="@+id/targetNameText"
                    style="@style/AppTheme.Vignette.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/AppTheme.Vignette.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Target coordinates:" />

                <TextView
                    android:id="@+id/targetCoordinatesText"
                    style="@style/AppTheme.Vignette.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/AppTheme.Vignette.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current coordinates:" />

                <TextView
                    android:id="@+id/currentCoordinatesText"
                    style="@style/AppTheme.Vignette.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/AppTheme.Vignette.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Azimuth:" />

                <TextView
                    android:id="@+id/azimuthText"
                    style="@style/AppTheme.Vignette.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/AppTheme.Vignette.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance:" />

                <TextView
                    android:id="@+id/distanceText"
                    style="@style/AppTheme.Vignette.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>

        <pl.edu.mimuw.students.wm382710.appa.CompassView
            android:id="@+id/compassView"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

</FrameLayout>